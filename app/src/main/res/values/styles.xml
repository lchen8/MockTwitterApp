<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- For the User Profile header -->
    <style name="header_title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="header_component">
        <item name="android:layout_marginLeft">@dimen/item_margin_larger</item>
    </style>

    <style name="header_component.image">
        <item name="android:layout_height">@dimen/photo_size_medium</item>
        <item name="android:layout_width">@dimen/photo_size_medium</item>
        <item name="android:layout_marginTop">@dimen/item_margin_larger</item>
        <item name="android:layout_marginBottom">@dimen/item_margin_larger</item>
        <item name="android:padding">@dimen/photo_border</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="header_component.name">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/item_margin_larger</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="header_component.body">
        <item name="android:layout_margin">@dimen/item_margin_larger</item>
        <item name="android:layout_marginBottom">@dimen/item_margin</item>
    </style>

    <style name="header_component.info">
        <item name="android:layout_margin">@dimen/item_margin</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_component.screenname">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>


    <!-- For individual tweets -->
    <style name="tweet_component">
        <item name="android:layout_marginLeft">@dimen/item_margin</item>
    </style>

    <style name="tweet_component.image">
        <item name="android:layout_height">@dimen/photo_size_small</item>
        <item name="android:layout_width">@dimen/photo_size_small</item>
        <item name="android:layout_marginTop">@dimen/item_margin</item>
        <item name="android:layout_marginBottom">@dimen/item_margin</item>
    </style>

    <style name="tweet_component.name">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/item_margin</item>
    </style>

    <style name="tweet_component.body">
        <item name="android:layout_marginBottom">@dimen/item_margin</item>
    </style>

    <style name="tweet_component.screenname">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="tweet_component.time_ago">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:layout_marginRight">@dimen/item_margin</item>
    </style>
    <style name="tweet_component.number">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:layout_marginLeft">@dimen/item_margin</item>
    </style>


    <style name="button">
        <item name="android:background">@drawable/button_states</item>
        <item name="android:layout_margin">@dimen/item_margin_larger</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="icon">
        <item name="android:layout_height">@dimen/photo_size_small</item>
        <item name="android:layout_width">@dimen/photo_size_small</item>
        <item name="android:padding">@dimen/item_margin_largest</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="tweet_component.icon">
        <item name="android:layout_height">@dimen/tweet_icon_size</item>
        <item name="android:layout_width">@dimen/tweet_icon_size</item>
        <item name="android:layout_marginBottom">@dimen/item_margin</item>
        <item name="android:layout_marginLeft">@dimen/icon_margin_left</item>
    </style>

</resources>
